INC_BOOST = ../../boost
INC_EIGEN = ../../eigen

DIR_MC = ../../MixtComp
LIB_MC = ../../MixtComp/lib/libMixtComp.a

DIR_NLOPT = ../../nlopt
INC_NLOPT = ../../nlopt/api
LIB_NLOPT = ../../nlopt/.libs/libnlopt.a

DIR_RE = regex
LIB_RE = regex/libRegex.a

DIR_TEST = test

# Flags for the cpp files at the root (as well as included headers, for example template classes) , i.e.
PKG_CXXFLAGS = -std=c++11 -MD -MP -I../.. -I$(INC_BOOST) -I$(INC_EIGEN) -DEIGEN_MATRIXBASE_PLUGIN=\"mixt_EigenMatrixBaseAddons.h\" -I$(DIR_MC)/src/LinAlg -I$(DIR_MC)/src -I$(INC_NLOPT)

## Use the R_HOME indirection to support installations of multiple R version
PKG_LIBS = $(LIB_MC) $(LIB_NLOPT) $(LIB_RE)

R_BUILD = T # Variable used to signal that the compilation occurs from inside R, this should trigger use of particular variables. Not implemented yet with CMake.

export R_BUILD LDFLAGS CC CFLAGS CXX CXXFLAGS # flags needed for the compilation of librairies

.PHONY: all pkglib

## $(SHLIB) is the usual default target that is built automatically from all source
## files in this directory. pkglib is an additional target for the libraries
## that will be installed in (PKGLIB) and which users can link against.

all: $(SHLIB)

$(SHLIB): pkglib

pkglib: $(LIB_NLOPT)
	cd $(DIR_MC);make lib
	cd $(DIR_RE);make lib
	cd $(DIR_TEST);make all

$(LIB_NLOPT):
	cd $(DIR_NLOPT);./configure CFLAGS=-fPIC;make
