#CXXFLAGS   = -std=c++11 -ansi -pedantic -Wall -g -Wno-long-long

#-----------------------------------------------------------------------
# flags in Release mode
CXXFLAGS   = -ansi -pedantic -Wall -O3 -fopenmp

