MYDIR = ./mysrc/
MYLIB = $(MYDIR)libMY.a
## Use the R_HOME indirection to support installations of multiple R version
PKG_LIBS = `$(R_HOME)/bin/Rscript -e "Rcpp:::LdFlags()"` $(SHLIB_OPENMP_CXXFLAGS) -L$(MYDIR) -lMY

.PHONY: all MY

all: $(SHLIB)
$(SHLIB): MY


MY:
	(cd $(MYDIR) && $(MAKE))
	$(RANLIB) $(MYLIB)
	