#-----------------------------------------------------------------------
# makevars
# author: Serge Iovleff
#-----------------------------------------------------------------------
#
# This file has to be included in all makefile of the projects.
#
#-----------------------------------------------------------------------
#
#   HASRMATH 't' if your system has libRmath
HASRMATH = t

LIB_RMATH_A = /usr/lib/libRmath.a
R_FLAGS = -DMATHLIB_STANDALONE

#-----------------------------------------------------------------------
# make program
# MAKE  = make

#-----------------------------------------------------------------------
# compilers
CC    = gcc
CXX   = g++

#-----------------------------------------------------------------------
# specific C flags
# long long are available
CFLAGS   = -Wno-long-long

#-----------------------------------------------------------------------
# STK 0 based adressing by default
#STK_FLAGS = -DSTKBASEARRAYS=0

#-----------------------------------------------------------------------
# path to stkpp sources
#when compiling from the root of MixtComp
ifneq ($(wildcard ../../stk/stkpp),)
STK_DIR = ../../stk/stkpp
else
STK_DIR = ../stkpp
endif

#automatic detection override should stkpp be located somewhere else
#STK_DIR = kigbigb

#-----------------------------------------------------------------------
# common compile flags
CXXFLAGS_ALL = -ansi -std=c++11 -pedantic -Wall -I$(realpath $(STK_DIR)/include)

#-----------------------------------------------------------------------
# flags in Debug mode
STK_FLAGS_DEBUG = $(STK_FLAGS) -DSTK_BOUNDS_CHECK -DSTK_DEBUG -DSTK_VERBOSE
CXXFLAGS_DEBUG  = "$(CXXFLAGS_ALL) -g -O0 $(STK_FLAGS_DEBUG)"

#-----------------------------------------------------------------------
# flags in Release mode
STK_FLAGS_RELEASE = $(STK_FLAGS)
CXXFLAGS_RELEASE = "$(CXXFLAGS_ALL) -O3 -ftree-vectorize -march=native -funroll-loops $(STK_FLAGS_RELEASE)"
